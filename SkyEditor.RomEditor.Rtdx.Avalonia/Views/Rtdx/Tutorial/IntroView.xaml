<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Properties="clr-namespace:SkyEditor.RomEditor.Avalonia.Properties;assembly=SkyEditor.RomEditor.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SkyEditor.RomEditor.Avalonia.Views.Rtdx.Tutorial.IntroView">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="25"/>
    </Grid.RowDefinitions>
    <TextBlock Margin="5,20,0,0" Text="{x:Static Properties:Resources.Views_Rtdx_Tutorial_IntroView_IntroText}" />
    <Button Grid.Row="2" Margin="5,0,0,0" Content="{x:Static Properties:Resources.Views_Rtdx_Tutorial_IntroView_OpenRomDirectory}" Command="{Binding OpenRomCommand}" Width="200" HorizontalAlignment="Left"/>
  </Grid>
</UserControl>
